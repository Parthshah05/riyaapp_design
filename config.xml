<?xml version='1.0' encoding='utf-8'?>
<widget id="io.ionic.starter" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MyApp</name>
    <description>An awesome Ionic/Cordova app.</description>
    <author email="hi@ionicframework.com" href="http://ionicframework.com/">Ionic Framework Team</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="ScrollEnabled" value="false" />
    <preference name="android-minSdkVersion" value="19" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="FadeSplashScreenDuration" value="300" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="10000" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="FadeSplashScreen" value="true" />
    <preference name="ShowSplashScreen" value="true" />
    <platform name="android">
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application" xmlns:android="http://schemas.android.com/apk/res/android">
            <application android:networkSecurityConfig="@xml/network_security_config" />
        </edit-config>
        <resource-file src="resources/android/xml/network_security_config.xml" target="app/src/main/res/xml/network_security_config.xml" />
        <allow-intent href="market:*" />
        <icon density="ldpi" src="resources/icon/android/ldpi.png" />
        <icon density="mdpi" src="resources/icon/android/mdpi.png" />
        <icon density="hdpi" src="resources/icon/android/hdpi.png" />
        <icon density="xhdpi" src="resources/icon/android/xhdpi.png" />
        <icon density="xxhdpi" src="resources/icon/android/xxhdpi.png" />
        <icon density="xxxhdpi" src="resources/icon/android/xxxhdpi.png" />
        <splash density="land-ldpi" src="resources/screen/android/splash-land-ldpi.png" />
        <splash density="land-mdpi" src="resources/screen/android/splash-land-mdpi.png" />
        <splash density="land-hdpi" src="resources/screen/android/splash-land-hdpi.png" />
        <splash density="land-xhdpi" src="resources/screen/android/splash-land-xhdpi.png" />
        <splash density="land-xxhdpi" src="resources/screen/android/splash-land-xxhdpi.png" />
        <splash density="land-xxxhdpi" src="resources/screen/android/splash-land-xxxhdpi.png" />
        <splash density="port-ldpi" src="resources/screen/android/splash-port-ldpi.png" />
        <splash density="port-mdpi" src="resources/screen/android/splash-port-mdpi.png" />
        <splash density="port-hdpi" src="resources/screen/android/splash-port-hdpi.png" />
        <splash density="port-xhdpi" src="resources/screen/android/splash-port-xhdpi.png" />
        <splash density="port-xxhdpi" src="resources/screen/android/splash-port-xxhdpi.png" />
        <splash density="port-xxxhdpi" src="resources/screen/android/splash-port-xxxhdpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        
        <icon height="40" src="resources/icon/ios/icon-small-40@2x.png" width="40" />
        <icon height="60" src="resources/icon/ios/icon-60@2x.png" width="60" />
        <icon height="40" src="resources/icon/ios/icon-small-40.png" width="40" />
        <icon height="50" src="resources/icon/ios/icon-small-50.png" width="50" />
        <icon height="60" src="resources/icon/ios/icon-60.png" width="60" />
        <icon height="72" src="resources/icon/ios/icon-72.png" width="72" />
        <icon height="76" src="resources/icon/ios/icon-76.png" width="76" />
        <icon height="167" src="resources/icon/ios/icon-167.png" width="167" />
        <icon height="1024" src="resources/icon/ios/icon-1024.png" width="1024" />
        <splash height="1242" src="resources/screen/ios/Default@3x~iphone~anycom.png" width="2208" />
        <splash height="1334" src="resources/screen/ios/Default@2x~iphone~anyany.png" width="1334" />
        <splash height="1334" src="resources/screen/ios/Default@2x~iphone~comany.png" width="750" />
        <splash height="2208" src="resources/screen/ios/Default@3x~iphone~anyany.png" width="2208" />
        <splash height="2208" src="resources/screen/ios/Default@3x~iphone~comany.png" width="1242" />
        <splash height="2732" src="resources/screen/ios/Default@2x~ipad~comany.png" width="1278" />
        <splash height="2732" src="resources/screen/ios/Default@2x~ipad~anyany.png" width="2732" />
        </platform>
    <plugin name="cordova-plugin-whitelist" spec="1.3.3" />
    <plugin name="cordova-plugin-statusbar" spec="2.4.2" />
    <plugin name="cordova-plugin-device" spec="2.0.2" />
    <plugin name="cordova-plugin-splashscreen" spec="5.0.2" />
    <plugin name="cordova-plugin-ionic-webview" spec="^4.0.0" />
    <plugin name="cordova-plugin-ionic-keyboard" spec="^2.0.5" />
</widget>
